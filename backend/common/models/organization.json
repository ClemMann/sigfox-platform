{
  "name": "Organization",
  "plural": "Organizations",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "replaceOnPUT": false,
  "mixins": {
    "TimeStamp": {
      "required": false,
      "validateUpsert": true
    },
    "Stats": [
      {
        "method": "stats",
        "endpoint": "/stats",
        "description": "Statistical information for Organization registers.",
        "type": "model",
        "count": {
          "on": "createdAt",
          "by": "index"
        }
      }
    ]
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true,
      "default": "My organization"
    },
    "logo": {
      "type": "string",
      "default": "https://www.shareicon.net/data/128x128/2017/06/21/887415_group_512x512.png"
    },
    "usedAt": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {
    "Members": {
      "type": "hasAndBelongsToMany",
      "model": "user",
      "foreignKey": "memberId"
    },
    "user": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "userId"
    },
    "Dashboards": {
      "type": "hasMany",
      "model": "Dashboard",
      "foreignKey": "organizationId"
    },
    "Categories": {
      "type": "hasAndBelongsToMany",
      "model": "Category",
      "foreignKey": "categoryId"
    },
    "Devices": {
      "type": "hasAndBelongsToMany",
      "model": "Device",
      "foreignKey": "deviceId"
    },
    "Messages": {
      "type": "hasAndBelongsToMany",
      "model": "Message",
      "foreignKey": "messageId"
    },
    "Geolocs": {
      "type": "hasAndBelongsToMany",
      "model": "Geoloc",
      "foreignKey": "geolocId"
    },
    "Alerts": {
      "type": "hasAndBelongsToMany",
      "model": "Alert",
      "foreignKey": "alertId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "organizationMember",
      "permission": "ALLOW",
      "property": [
        "__create__Dashboards",
        "__destroyById__Dashboards",
        "__updateById__Dashboards",
        "__updateById__Devices"
      ]
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "organizationMember",
      "permission": "ALLOW",
      "property": [
        "getFilteredMessages",
        "findById",
        "findOne",
        "count",
        "__count__Dashboards",
        "__get__Dashboards",
        "__find__Dashboards",
        "__findOne__Dashboards",
        "__findOne__Dashboards",
        "__findById__Dashboards",
        "__count__Members",
        "__find__Members",
        "__count__Categories",
        "__get__Categories",
        "__find__Categories",
        "__findOne__Categories",
        "__count__Devices",
        "__get__Devices",
        "__find__Devices",
        "__findOne__Devices",
        "__count__Messages",
        "__get__Messages",
        "__find__Messages",
        "__findOne__Messages",
        "__count__Geolocs",
        "__get__Geolocs",
        "__find__Geolocs",
        "__findOne__Geolocs",
        "__count__Alerts",
        "__get__Alerts",
        "__find__Alerts",
        "__findOne__Alerts"
      ]
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "*"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": "*"
    }
  ],
  "methods": {}
}
