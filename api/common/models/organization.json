{
  "name": "Organization",
  "plural": "Organizations",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "FireLoop": true,
    "TimeStamp": {
      "required": false,
      "validateUpsert": true
    },
    "Stats": [
      {
        "method": "stats",
        "endpoint": "/stats",
        "description": "Statistical information for Organization registers.",
        "type": "model",
        "count": {
          "on": "createdAt",
          "by": "index"
        }
      }
    ]
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true,
      "default": "My organization"
    },
    "ownerId": {
      "type": "string",
      "required": true
    },
    "logo": {
      "type": "string",
      "default": "https://www.shareicon.net/data/512x512/2017/07/13/888376_office_512x512.png"
    }
  },
  "validations": [],
  "relations": {
    "Members": {
      "type": "hasAndBelongsToMany",
      "model": "user",
      "foreignKey": "memberId"
    },
    "Messages": {
      "type": "hasAndBelongsToMany",
      "model": "Message"
    },
    "Devices": {
      "type": "hasAndBelongsToMany",
      "model": "Device"
    },
    "Categories": {
      "type": "hasAndBelongsToMany",
      "model": "Category"
    },
    "Dashboards": {
      "type": "hasAndBelongsToMany",
      "model": "Dashboard"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": "*"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "CREATE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "organizationMember",
      "permission": "ALLOW",
      "property": [
        "findById",
        "findOne",
        "count",
        "__count__Members",
        "__find__Members",
        "__count__Devices",
        "__get__Devices",
        "__find__Devices",
        "__findOne__Devices",
        "__count__Messages",
        "__get__Messages",
        "__find__Messages",
        "__findOne__Messages",
        "__count__Categories",
        "__get__Categories",
        "__find__Categories",
        "__findOne__Categories",
        "__count__Dashboards",
        "__get__Dashboards",
        "__find__Dashboards",
        "__findOne__Dashboards"
      ]
    }
  ],
  "methods": {}
}
