{
  "name": "Organization",
  "plural": "Organizations",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "FireLoop": true,
    "TimeStamp": {
      "required": false,
      "validateUpsert": true
    },
    "Stats": [
      {
        "method": "stats",
        "endpoint": "/stats",
        "description": "Statistical information for Organization registers.",
        "type": "model",
        "count": {
          "on": "createdAt",
          "by": "index"
        }
      }
    ]
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true,
      "default": "My organization"
    },
    "ownerId": {
      "type": "string",
      "required": true
    },
    "logo": {
      "type": "string",
      "default": "https://www.shareicon.net/data/512x512/2017/07/13/888376_office_512x512.png"
    }
  },
  "validations": [],
  "relations": {
    "Members": {
      "type": "hasAndBelongsToMany",
      "model": "user",
      "foreignKey":"memberId"
    },
    "Messages": {
      "type": "hasMany",
      "model": "Message",
      "foreignKey": "organizationId"
    },
    "Devices": {
      "type": "hasMany",
      "model": "Device",
      "foreignKey": "organizationId"
    },
    "Categories": {
      "type": "hasMany",
      "model": "Category",
      "foreignKey": "organizationId"
    },
    "Dashboards": {
      "type": "hasMany",
      "model": "Dashboard",
      "foreignKey": "dashboardId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "CREATE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "organizationMember",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
